<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mikex.asyourwish.activity.AsYourWishActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/et_ayw_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Account" />

    <EditText
        android:id="@+id/et_ayw_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_ayw_account"
        android:layout_alignStart="@+id/et_ayw_account"
        android:layout_below="@+id/et_ayw_account"
        android:ems="10"
        android:inputType="textPassword"
        android:text="password" />

    <TextView
        android:id="@+id/tv_ayw_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_ayw_pwd"
        android:layout_marginBottom="11dp"
        android:layout_toLeftOf="@+id/et_ayw_account"
        android:layout_toStartOf="@+id/et_ayw_account"
        android:text="Account:" />

    <TextView
        android:id="@+id/tv_ayw_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_ayw_pwd"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/et_ayw_pwd"
        android:layout_toStartOf="@+id/et_ayw_pwd"
        android:text="Password:" />

    <Button
        android:id="@+id/btn_asy_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_ayw_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Login" />

    <Button
        android:id="@+id/btn_ayw_forgot_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot pwd"
        android:layout_below="@+id/btn_asy_login"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_ayw_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ayw_forgot_pwd"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/btn_ayw_forgot_pwd"
        android:layout_toStartOf="@+id/btn_ayw_forgot_pwd"
        android:text="wechat" />

    <Button
        android:id="@+id/btn_ayw_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_ayw_wechat"
        android:layout_toEndOf="@+id/btn_ayw_forgot_pwd"
        android:layout_toRightOf="@+id/btn_ayw_forgot_pwd"
        android:text="Weibo" />

    <Button
        android:id="@+id/btn_ayw_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_asy_login"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_asy_login"
        android:layout_marginBottom="32dp"
        android:text="New Account" />

</RelativeLayout>
